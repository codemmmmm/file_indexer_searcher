[Unit]
# File indexer
Description=Runs the file indexer container

[Service]
ExecStart=/bin/bash -c "/usr/bin/docker run -v /etc/localtime:/etc/localtime:ro --mount source=files-db,target="/etc/files-index" --mount type=bind,source="/",target="/host",readonly mmdockermmmm/indexer_ubuntu"
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
